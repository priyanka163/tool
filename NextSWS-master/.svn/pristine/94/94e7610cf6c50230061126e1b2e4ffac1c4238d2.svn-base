<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreyTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_grey_color</item>
    </style>

    <style name="BlackBigTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GreenTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_green_color</item>
    </style>

    <style name="BlackMediumTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
